{
	"root": true,

	"extends": "eslint:recommended",

	"parser": "@babel/eslint-parser",

	"parserOptions": {
		"requireConfigFile": false,
		"sourceType": "module"
	},

	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},

	"globals": {
		"$": false
	},

	"rules": {
		"no-mixed-spaces-and-tabs": 0,

		"quotes": [
			2,
			"single"
		]
	}
}
